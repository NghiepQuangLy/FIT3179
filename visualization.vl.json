{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://NghiepQuangLy.github.io/FIT3179/world.json",
        "format": {"type": "topojson", "feature": "ne_110m_populated_places_simple"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "ne_110m_populated_places_simple"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "encoding": {
            "size": {
              "field": "mag",
              "type": "quantitative",
              "scale": {"domain": [4, 8]}
            },
            "color": {
              "field": "depth",
              "type": "quantitative",
              "scale": {"scheme": "reds"}
            }
          }
        }
      ]
    }
  ]
}
