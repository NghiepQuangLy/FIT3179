{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Critically Endangered Animals By Country",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://NghiepQuangLy.github.io/FIT3179/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://NghiepQuangLy.github.io/FIT3179/endangeredanimalsbycountry.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "encoding": {
            "size": {
              "field": "CriticallyEndangered",
              "type": "quantitative",
              "scale": {
                "type": "quantile"
              }
            },
            "color": {
              "field": "CritcallyEndangered",
              "type": "quantitative",
              "scale": {"scheme": "reds"}
            }
          }
        }
      ]
    }
  ]
}
